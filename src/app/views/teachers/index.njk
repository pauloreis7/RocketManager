{% extends "layout.njk" %}

{% block content %}

    <section class="card info_table">
    
        <article class="card_image" style=" max-width:100%; height:100%;background: url(https://source.unsplash.com/collection/8359212/525x500) no-repeat center center / cover">
        
        </article>

        <article class="details table_content">

            <div class="table_header">
                
                <a class="button" href="/teachers/create">Novo</a>
                
                <form action="/teachers" method="get">
                
                    <input name="search" value="{{ search }}" placeholder="Search name or subject" />
                
                    <button type="submit">Pequisar</button>
                
                </form>

            </div>


            <table width="100%">
            
                <thead>

                    <tr>
                
                     <th>Teacher</th>
                     <th>Services</th>
                     <th>See more</th>

                    </tr>
                
                </thead>

                <tbody>

                    {% for teacher in teachers %}
                
                        <tr>
                        
                            <td>
                            
                                <span style="background-image: url({{ teacher.avatar_url }})"></span>{{ teacher.name }}
                                
                                <span class="total_students" title="total students">{{teacher.total_students}}</span>
                            
                            </td>

                            <td class="services">
                                {% for subject_taught in teacher.subjects_taught %}
                                <span>{{ subject_taught }}</span> 
                                {% endfor %}
                            </td>
                            
                            <td><a href="/teachers/{{ teacher.id }}">View</a></td>
                        
                        </tr>
                    
                    {% endfor %}
                
                </tbody>
            
            </table>

            <div class="pagination" data-page={{ paginationData.page }} data-total={{ paginationData.total }} data-search={{ search }}></div>
            
        </article>
    
    </section>

{% endblock %}
{% extends "layout.njk" %}

{% block content %}

    <section class="card info_table">
    
        <article class="card_image" style=" max-width:100%; height:100%;background: url(https://source.unsplash.com/collection/8359212/525x500) no-repeat center center / cover">
        
        </article>

        <article class="details table_content">

             <div class="table_header">
                
                <a class="button" href="/students/create">New</a>
                
                <form action="/students" method="get">
                
                    <input name="search" value="{{ search }}" placeholder="Search name or e-mail" />
                
                    <button type="submit">Search</button>
                
                </form>

            </div>

            <table width="100%">
            
                <thead>

                    <tr>
                
                     <th>Student</th>
                     <th>Email</th>
                     <th>school year</th>
                     <th>See more</th>

                    </tr>
                
                </thead>

                <tbody>

                    {% for student in students %}
                
                        <tr>
                        
                            <td><span style="background-image: url({{ student.avatar_url }})"></span>{{ student.name }}</td>
                            <td>{{ student.email }}</td>
                            <td class="level">{{ student.level }}</td>
                            <td><a href="/students/{{ student.id }}">View</a></td>
                        
                        </tr>
                    
                    {% endfor %}
                
                </tbody>
            
            </table>

            <div class="pagination" data-page={{ paginationData.page }} data-total={{ paginationData.total }} data-search={{ search }}></div>
            
        </article>
    
    </section>

{% endblock %}
{% extends "layout.njk" %}

{% block content %}

    <form class="card" method="POST" action="/teachers">
    
        <article class="card_image" style=" max-width:100%; height:100%;background: url(https://source.unsplash.com/collection/8359212/425x500) no-repeat center center / cover">
        
        </article>

        <article class="details">

            <h3>Teacher info</h3>

            <div class="item">
            
                <div>Teacher</div>

                <div>
                
                    <input type="url" name="avatar_url" placeholder="http://" />
                
                </div>
            
            </div>

            <div class="item">
            
                <div>Teacher</div>

                <div>
                
                    <input type="text" name="name" placeholder="complete name" />
                
                </div>
            
            </div>

            <div class="item">
            
                <div>Ages</div>

                <div>
                
                    <input type="date" name="birth" />
                
                </div>
            
            </div>

            <div class="item">
                
                <div>Class type</div>

                <div>
                
                    <span> <input type="radio" name="type" value="presential" />Presential </span>
                    <span> <input type="radio" name="type" value="distance" />To distance </span>
                
                </div>
                
            </div>

            <div class="item">

                <div>Educational level</div>
            
                <select name="level">
                    
                    <option value="highSchool">High school</option>
                    <option value="university">University</option>
                    <option value="masster">Master</option>
                    <option value="doctor">Doctorate degree</option>
                    
                </select>
            
            </div>

            <div class="item">
            
                <div>Monitoring</div>

                <div>
                
                    <input type="text" name="services" placeholder="separe in comma" />
                
                </div>     
            
            </div>

            <button type="submit">Salvar</button>

        </article>
    
    </form>

{% endblock %}
{% extends "layout.njk" %}

{% block content %}

    <section class="card info_table">
    
        <article class="card_image" style=" max-width:100%; height:100%;background: url(https://source.unsplash.com/collection/8359212/525x500) no-repeat center center / cover">
        
        </article>

        <article class="details table_content">

            <div class="table_header">
                
                <a href="/students/create">Novo</a>
                <h3>Teachers</h3>

            </div>

            <table width="100%">
            
                <thead>

                    <tr>
                
                     <th>Teacher</th>
                     <th>Services</th>
                     <th>See more</th>

                    </tr>
                
                </thead>

                <tbody>

                    {% for teacher in teachers %}
                
                        <tr>
                        
                            <td><span style="background-image: url({{ teacher.avatar_url }})"></span>{{ teacher.name }}</td>

                            <td>
                            {% for service in teacher.services %}
                               <span>{{ service }}</span> 
                            {% endfor %}
                            </td>
                            
                            <td><a href="/teachers/{{ teacher.id }}">View</a></td>
                        
                        </tr>
                    
                    {% endfor %}
                
                </tbody>
            
            </table>
            
        </article>
    
    </section>

{% endblock %}